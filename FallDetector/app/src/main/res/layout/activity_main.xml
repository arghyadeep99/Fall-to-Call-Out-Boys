<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitris.falldetector.ui.MainActivity"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:background="@drawable/bezels">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="150dp"
            android:gravity="center"
            android:text="@string/main_title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_man_circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="325dp"
            android:text="This app helps you call your emergency contact automatically in case of a fall"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary2"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="400dp"
            android:text="Set Emergency Contact"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Gray" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginLeft= "230dp"
            android:layout_marginRight="25dp"
            android:text="FALL HISTORY"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Gray" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:text="START TRACKING"
        android:textColor="@color/white"
        android:theme="@style/AppTheme.Gray" />

</RelativeLayout>
